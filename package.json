{
  "name": "famous-carousel",
  "version": "0.8.2",
  "author": "Peace Chen",
  "license": "MIT",
  "description": "Carousel built on Famo.us",
  "keywords": [
    "famous",
    "famo.us",
    "carousel",
    "slider",
    "slideshow"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/peacechen/famous-carousel/"
  },
  "bugs": "https://github.com/peacechen/famous-carousel/ ... ",
  "main": "index.js",
  "scripts": {
    "build": "npm run build-min && npm run build-debug && npm run build-globalmin",
    "build-min": "browserify src/Carousel.js -g uglifyify | uglifyjs --screw-ie8 -m -c dead_code,sequences,conditionals,booleans,unused,if_return,join_vars,drop_debugger > dist/global/famous-carousel.js",
    "build-globalmin": "browserify src/Carousel.js --standalone famousCarousel -g uglifyify | uglifyjs --screw-ie8 -m -c dead_code,sequences,conditionals,booleans,unused,if_return,join_vars,drop_debugger > dist/global/famous-carousel.min.js",
    "build-debug": "browserify index.js -d --standalone famousCarousel > dist/global/famous-carousel.debug.js",
    "build-commonjs": "browserify index.js -t [ babelify --modules common ] > dist/commonjs/famous-carousel.js",
    "build-es5": "babel index.js > dist/es5/index.js && npm run build-es5-src",
    "build-es5-src": "npm run build-es5-index && npm run build-es5-carousel && npm run build-es5-dots && npm run build-es5-arrow && npm run build-es5-pager",
    "build-es5-index": "babel src/index.js -t [ babelify ] > dist/es5/src/index.js",
    "build-es5-carousel": "babel src/Carousel.js > dist/es5/src/Carousel.js",
    "build-es5-pager": "babel src/Pager.js > dist/es5/src/Pager.js",
    "build-es5-dots": "babel src/Dots.js > dist/es5/src/Dots.js",
    "build-es5-arrow": "babel src/Arrow.js > dist/es5/src/Arrow.js",
    "test": "npm run lint -s && npm run build",
    "lint": "npm run lint-eslint && npm run lint-jscs",
    "lint-jscs": "jscs src/",
    "lint-eslint": "eslint --ignore-path .gitignore src/",
    "example": "npm run build-example && npm run serve",
    "example-global": "browserify index.js -d --standalone famousCarousel > example/famous-carousel.global.js",
    "build-example": "browserify example/index.js -d > example/example.js",
    "serve": "node node_modules/serve/bin/serve example/ -p 8080"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "devDependencies": {
    "browserify": "^10.1.3",
    "eslint": "^0.21.2",
    "jscs": "^1.13.1",
    "serve": "^1.4.0",
    "uglify-js": "^2.4.15",
    "uglifyify": "^3.0.1"
  },
  "dependencies": {
    "famous": "^0.5.2",
    "babelify": "^6.0.1"
  }
}
